{
	"env": {
			"es6": true,
			"node": true,
			"mocha": true
	},
	"plugins": ["prettier"],
	"rules": {
    "prettier/prettier": "error",
    "indent": [
      "error",
      2
  ],
  "linebreak-style": [
      "error",
      "unix"
  ],
  "quotes": [
      "warn",
      "single"
  ],
  "semi": [
      "error",
      "always"
  ],
  "no-console": ["warn"]
	},
	"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 2017,
			"ecmaFeatures": {
				"experimentalObjectRestSpread": true
		}
	}
}